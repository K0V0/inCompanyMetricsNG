{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "declaration": false,
    "experimentalDecorators": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "sourceMap": false,
    "types": ["node", "inquirer", "fs-extra", "reflect-metadata"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules/**", "**/lib/**"]
}
